<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="omi_fb_permission_tree" model="ir.ui.view">
            <field name="name">omi.fb.permission.tree</field>
            <field name="model">omi.fb.permission</field>
            <field name="arch" type="xml">
                <tree string="Facebook Permissions" editable="top">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="omi_fb_permission_act" model="ir.actions.act_window">
            <field name="name">Facebook Permissions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">omi.fb.permission</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>
